extend layout/main

block tdk
  -
    var tdk = {
      title: '工厂介绍 - 纳科达',
      description: '纳科达是一家TPU聚氨酯薄膜生产厂家，TPU隐形车衣生产厂家，PPF漆面保护膜生产厂家，可应用于汽车领域，光电领域，建筑领域',
      keywords: '纳科达TPU聚氨酯应用领域，TPU隐形车衣应用汽车领域，TPU薄膜应用光电领域，TPU薄膜应用建筑领域'
